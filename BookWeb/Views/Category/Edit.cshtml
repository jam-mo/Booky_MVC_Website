@model Category


<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Category</h2>
        </div>
        <!-- <div asp-validation-summary="ModelOnly"></div>  Lists all errors-->
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0">Category Name</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary" style="width:120px">Update</button>
            </div>
            <div class="col-6 d-flex justify-content-center">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:120px">Back To List</a>
            </div>
        </div>


    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}